<Window x:Class="WpfApp1.SubWindowAirplaneAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SubWindowAirplaneAdd" Height="190" Width="200">
    <Grid>
        <Label Name="labelModel" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxModel" HorizontalAlignment="Left" Height="26" Margin="10,36,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="174" TextChanged="textBox_TextChanged"/>

        <Button IsEnabled="False" x:Name="action" Content="Действие" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="75" Click="action_Click"/>
        <Button x:Name="cancel" Content="Отмена" HorizontalAlignment="Left" Margin="109,132,0,0" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>
        <Label x:Name="labelNumberSeats" Content="Label" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxNumberSeats" HorizontalAlignment="Left" Height="26" Margin="10,93,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="174" TextChanged="textBox_TextChanged"/>

    </Grid>
</Window>
